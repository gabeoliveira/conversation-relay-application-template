# Twilio Account Credentials
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=

# Twilio Phone Number for outbound calls
TWILIO_PHONE_NUMBER=+1xxxxxxxxxx

# Twilio Voice Intelligence SID
TWILIO_VOICE_INTELLIGENCE_SID=GAxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Twilio Conversations Service SID
TWILIO_CONVERSATION_SERVICE_SID=ISxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Twilio TaskRouter Configuration
TWILIO_WORKFLOW_SID=WWxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_WORKSPACE_SID=WSxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Optional: Twilio Sync Service SID (required for WhatsApp typing indicators)
# TWILIO_SYNC_SERVICE_SID=ISxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Ngrok domain (for local development)
NGROK_DOMAIN=your-domain.ngrok.app

# Welcome Greeting for Conversation Relay
WELCOME_GREETING="Thanks for calling! How can I help you today?"

# OpenAI API Key
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Optional: Max completion tokens for LLM responses (limits response length)
# Recommended: 150-200 for conversational bots (keeps responses concise)
# If not set, no limit is applied
# OPENAI_MAX_COMPLETION_TOKENS=150

# Optional: LLM Provider selection
# Options: openai-chat-completions (default), openai-responses
# - openai-chat-completions: Original Chat Completions API (stable, well-tested)
# - openai-responses: New Responses API (built-in state management, simplified tools)
# LLM_PROVIDER=openai-chat-completions

# Optional: LLM Model selection (defaults to gpt-4.1)
# Examples: gpt-4.1, gpt-4o, gpt-4o-mini, gpt-4-turbo
# LLM_MODEL=gpt-4.1

# Optional: Google Sheets integration
GOOGLESHEETS_SPREADSHEET_ID=

# Optional: Google Calendar integration
GOOGLE_CALENDAR_ID=

# Optional: Server port (defaults to 3000)
# PORT=3000
